
@model IEnumerable<Department>
@{
    ViewData["title"] = "All Departments";
}
@{
    ViewData["Title"] = "Index";
}
<a asp-action="Create" class="btn btn-success">Add New Department</a>
@if (Model.Count() > 0)
{
    
    <h1> Departments</h1>
<table class="table table-dark table-hover mt-5">

  <thead>
    <tr>
      <th scope="col">@Html.DisplayNameFor(D=>D.Code)</th>
      <th scope="col">@Html.DisplayNameFor(D=>D.DateOCreation)</th>
      <th scope="col">@Html.DisplayNameFor(D=>D.Name)</th>
      <th scope="col">Deails</th>
       <th scope="col">Update</th>
        <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
            @foreach(var dept in Model)
            {
                <tr>
                    <th scope="row">@dept.Code</th>
                    <td>@dept.DateOCreation</td>
                    <td>@dept.Name</td>

                      <partial name="_ButtonsPartialView" model="@dept.Id.ToString()">
                  @*  <td><a asp-action="Details" asp-route-id="@dept.Id"><i class="fa-solid fa-circle-info"></i></a></td>
                    <td><a asp-action="Edit" asp-route-id="@dept.Id"><i class="fas fa-user-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@dept.Id"><i class="fa-solid fa-trash"></i></a></td>*@

                </tr>
            }
           
    
   
  </tbody>
</table>
}
else
{
    <div class="mt-5 bg-info" >
        <h1>No Departments</h1>
    </div>
}