@model UserViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete @Model.FName + @Model.LName</h1>


<form asp-action="ConfirmDelete">
  <div class="mb-3 form-group">
    <label class="col-form-label" asp-for="FName"></label>
    <input readonly type="text" class="form-control" asp-for="FName">
   
  </div>
  <div class="mb-3 form-group">
    <label class="col-form-label" asp-for="LName"></label>
    <input readonly type="text" class="form-control" asp-for="LName">
   
  </div>
  <div class="mb-3 form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input readonly type="text" class="form-control" asp-for="Email">
   
  </div>
  <div class="mb-3 form-group">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input readonly type="text" class="form-control" asp-for="PhoneNumber">
   
  </div>

  
  
   <div class="mb-3 form-group">
    <label class="col-form-label" asp-for="Id"></label>
    <input readonly type="text" class="form-control" asp-for="Id">
   
  </div>

  <button type="submit"  class="btn btn-light">Delete</button>
    <a asp-action="Index" class="btn btn-light">Back To List</a>

    </form>